<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/valbg"
        tools:context=".HomePage">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="vAlorant - Match UP"
            android:textSize="28dp"
            android:fontFamily="@font/myfont"
            android:textColor="#f94555"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.220"
            android:id="@+id/textViewTitle"/>

    <Button
            android:text="Start Game"
            android:layout_width="140dp"
            android:layout_height="45dp"
            android:id="@+id/buttonStart"
            android:background="@drawable/rounded_btn"
            android:backgroundTint="#f94555"
            android:onClick="OnClickStart"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:iconTint="#f94555"
            android:textColor="@color/white"
            app:layout_constraintVertical_bias="0.8"
    />
    <Button
            android:text="Exit Game"
            android:layout_width="140dp"
            android:layout_height="45dp" android:id="@+id/buttonExit"
            android:background="@drawable/rounded_btn"
            android:backgroundTint="#f94555"
            android:onClick="OnClickExit"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.9" android:textColor="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>